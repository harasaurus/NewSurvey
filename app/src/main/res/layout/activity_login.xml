<?xml version="1.0" encoding="utf-8"?>
<!--Use ScrollView as keyboard hides the password text box-->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ops.newsurvey.LoginActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/loginusername"
        android:hint="Type your username"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/loginusername"
        android:layout_alignStart="@+id/loginusername"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:id="@+id/loginpassword"
        android:hint="Type your password"
        android:textColor="@color/colorPrimaryDark"
        />

    <!-- warnings -->
    <TextView
        android:id="@+id/loginWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="#ff0000"/>

    <TextView
        android:text="forgot password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:id="@+id/textView"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:text="Don't have an account? Signup here "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:id="@+id/textView2"
        android:onClick="goToSign"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="14dp"
        android:id="@+id/button"
        android:layout_below="@+id/loginpassword"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff"/>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView3"
        android:layout_marginBottom="55dp"
        android:layout_above="@+id/loginusername"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
